<section class="admin-products-new">
  <%= render 'layouts/top_nav' %>

  <header class="page-header">
    <h1>Login</h1>
  </header>

  <%= form_tag '/login' do %>
    <div class="form-group">
      <h4>Email:</h4> 
      <%= text_field_tag :email %>
    </div>
    
    <div class="form-group">
      <h4>Password:</h4>  
      <%= password_field_tag :password %>
    </div>

    <%= submit_tag "Submit" %>

  <% end %>
  <br>
  <br>
  <%= link_to 'Home', :root %>

</section>